generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  images        Image[]
  albums        Album[]
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  expiresAt    DateTime
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                   String    @id @default(cuid())
  userId               String
  accountId            String
  providerId           String
  accessToken          String?
  refreshToken         String?
  idToken              String?
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope                String?
  password             String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

model Image {
  id           String   @id @default(cuid())
  userId       String
  url          String
  thumbnailUrl String
  filename     String
  description  String?
  tags         String[] @default([])
  width        Int?
  height       Int?
  size         Int?
  mimeType     String?
  status       ImageStatus @default(PROCESSING)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  albums       AlbumImage[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Album {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  coverImageId String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  images      AlbumImage[]

  @@index([userId])
  @@index([isPublic])
}

model AlbumImage {
  id        String   @id @default(cuid())
  albumId   String
  imageId   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  image     Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([albumId, imageId])
  @@index([albumId])
  @@index([imageId])
}

enum ImageStatus {
  PROCESSING
  READY
  FAILED
}
